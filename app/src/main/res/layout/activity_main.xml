<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF121212"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF1E1E1E"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_more" />

            <TextView
                android:id="@+id/projectName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Новый проект"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_preferences" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp">

            <ImageButton
                android:id="@+id/rewindButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:src="@android:drawable/ic_media_play"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/stopButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@android:drawable/ic_media_pause" />

            <TextView
                android:id="@+id/currentTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0:00"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bpmValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="120 BPM"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tracksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF252525"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF1E1E1E"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/patternsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Паттерны"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#FF333333" />

        <Button
            android:id="@+id/mixerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Микшер"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#FF333333" />

        <Button
            android:id="@+id/instrumentsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Инструменты"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#FF333333" />

        <Button
            android:id="@+id/effectsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Эффекты"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#FF333333" />

    </LinearLayout>

    <Button
        android:id="@+id/recordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF44336"
        android:text="ЗАПИСЬ"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/addTrackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF4CAF50"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_margin="16dp" />

</LinearLayout>